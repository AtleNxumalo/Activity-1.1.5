<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Purple Shades for the Calculator -->
    <color name="purple_500">#9C27B0</color> <!-- Purple -->
    <color name="purple_700">#CE93D8</color> <!-- light lavender -->
    <color name="purple_200">#BE51F8</color> <!-- dark lavender -->


    <style name="CalculatorButton">
            <item name="android:layout_width">80dp</item>
            <item name="android:layout_height">80dp</item>
            <item name="android:background">@drawable/border</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textSize">24sp</item>
            <item name="android:gravity">center</item>
    </style>

        <style name="OperatorButton" parent="CalculatorButton">
            <item name="android:background">@drawable/button_border</item>
        </style>

        <style name="ActionButton" parent="CalculatorButton">
            <item name="android:background">@drawable/button_border</item>
            <item name="android:textColor">#FFEB3B</item> <!-- Yellow for emphasis -->
        </style>
</resources>
